<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UniHub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body class="bg-zinc-800">
    <!-- Navbar -->
    <div class="w-100 text-white flex p-4 items-center">
        <span class="m-1 text-yellow-300 text-3xl drop-shadow-[2px_2px_2px_rgba(255,0,0,1)]">UniHub</span>
        
        <!-- Search -->
        <span class="m-1 flex-grow flex items-center rounded">
            <div class="flex items-center w-full h-full">
                <input 
                    type="text" 
                    placeholder="search..." 
                    class="text-white bg-zinc-500 p-2 rounded-l outline-none w-full truncate"
                />
                <button class="bg-red-500 text-white p-2 rounded-r flex items-center">
                    Search
                    <img src="https://www.svgrepo.com/show/79552/magnifying-glass.svg" alt="Search Icon" class="ml-1 mr-2 w-4 h-4"/>
                </button>
            </div>
        </span>

        <!-- Login/Hi {username} and Sell Buttons -->
        <span class="ml-1 flex items-center">
            <% if (!name) { %>
                <!-- Show Login Button if not logged in -->
                <a href="/login">
                    <button class="bg-blue-500 text-white p-2 rounded border border-blue-700 mr-2">
                        Login
                    </button>
                </a>
            <% } else { %>
                <!-- Show Hi {username} if logged in -->
                <a href="/profile">
                    <span class="text-white mr-4 cursor-pointer">Hi, <%= name %></span>
                </a>
            <% } %>
            <a href="/list">
                <button class="bg-yellow-400 text-white p-2 rounded border border-green-700">
                    Sell
                </button>
            </a>
        </span>
    </div>

    <!-- the 5 listings sections -->
    <div class="p-4 text-white">

        <!-- Marquee Section -->
        <% if (marqueeListings.length) { %>
            <h2 class="text-2xl mb-4">Featured Listings</h2>
            <marquee behavior="scroll" direction="left" scrollamount="5">
                <div class="flex space-x-4">
                    <% marqueeListings.forEach(listing => { %>
                        <a href="/product/<%= listing.id %>" class="bg-zinc-700 p-4 rounded-lg shadow-md w-60">
                            <img src="data:image/jpeg;base64,<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-40 object-cover mb-2 rounded-lg"/>
                            <h3 class="font-bold text-lg mb-2 truncate"><%= listing.description %></h3>
                            <p class="truncate mb-2 truncate"><%= listing.title %></p>
                            <p class="font-semibold text-yellow-400">₹<%= listing.price %></p>
                        </a>
                    <% }) %>
                </div>
            </marquee>
        <% } %>

        <!-- Books Section -->
        <h2 class="text-2xl mb-4">Books</h2>
        <div class="grid grid-cols-7 gap-4">
            <% if (books.length) { %>
                <% books.forEach(listing => { %>
                    <a href="/product/<%= listing.id %>" class="bg-zinc-700 p-4 rounded-lg shadow-md">
                        <img src="data:image/jpeg;base64,<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-40 object-cover mb-2 rounded-lg"/>
                        <h3 class="font-bold text-lg mb-2 truncate"><%= listing.description %></h3>
                        <p class="truncate mb-2 truncate"><%= listing.title %></p>
                        <p class="font-semibold text-yellow-400">₹<%= listing.price %></p>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-gray-400">Stay tuned for new listings will appear here shortly.</p>
            <% } %>
        </div>
    
        <!-- Notes Section -->
        <h2 class="text-2xl mb-4">Notes</h2>
        <div class="grid grid-cols-7 gap-4">
            <% if (notes.length) { %>
                <% notes.forEach(listing => { %>
                    <a href="/product/<%= listing.id %>" class="bg-zinc-700 p-4 rounded-lg shadow-md">
                        <img src="data:image/jpeg;base64,<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-40 object-cover mb-2 rounded-lg"/>
                        <h3 class="font-bold text-lg mb-2 truncate"><%= listing.description %></h3>
                        <p class="truncate mb-2 truncate"><%= listing.title %></p>
                        <p class="font-semibold text-yellow-400">₹<%= listing.price %></p>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-gray-400">Stay tuned for new listings will appear here shortly.</p>
            <% } %>
        </div>
    
        <!-- Instruments Section -->
        <h2 class="text-2xl mb-4">Instruments</h2>
        <div class="grid grid-cols-7 gap-4">
            <% if (instruments.length) { %>
                <% instruments.forEach(listing => { %>
                    <a href="/product/<%= listing.id %>" class="bg-zinc-700 p-4 rounded-lg shadow-md">
                        <img src="data:image/jpeg;base64,<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-40 object-cover mb-2 rounded-lg"/>
                        <h3 class="font-bold text-lg mb-2 truncate"><%= listing.description %></h3>
                        <p class="truncate mb-2 truncate"><%= listing.title %></p>
                        <p class="font-semibold text-yellow-400">₹<%= listing.price %></p>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-gray-400">Stay tuned for new listings will appear here shortly.</p>
            <% } %>
        </div>
    
        <!-- Other Utilities Section -->
        <h2 class="text-2xl mb-4">Other Utilities</h2>
        <div class="grid grid-cols-7 gap-4">
            <% if (utilities.length) { %>
                <% utilities.forEach(listing => { %>
                    <a href="/product/<%= listing.id %>" class="bg-zinc-700 p-4 rounded-lg shadow-md">
                        <img src="data:image/jpeg;base64,<%= listing.image %>" alt="<%= listing.title %>" class="w-full h-40 object-cover mb-2 rounded-lg"/>
                        <h3 class="font-bold text-lg mb-2 truncate"><%= listing.description %></h3>
                        <p class="truncate mb-2 truncate"><%= listing.title %></p>
                        <p class="font-semibold text-yellow-400">₹<%= listing.price %></p>
                    </a>
                <% }) %>
            <% } else { %>
                <p class="text-gray-400">Stay tuned for new listings will appear here shortly.</p>
            <% } %>
        </div>
    
    </div>
    
</body>
</html>
